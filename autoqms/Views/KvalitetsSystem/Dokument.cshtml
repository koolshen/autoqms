<div class="container body-content">
    <div class="container-fluid">
        <div class="row">


            <div class="container-fluid" style="background-color: grey;">
                <div id="pages" class="carousel slide my-3" data-ride="carousel">
                    <ul id="MainContent_indicators" class="carousel-indicators">

                        <li data-target="#pages" data-slide-to="0" class="bg-secondary"></li>
                        <li data-target="#pages" data-slide-to="1" class="bg-secondary active"></li>
                    </ul>
                    <div id="MainContent_theShow" class="carousel-inner">


                        @for (int i = 1; i < (int)ViewData["files"] + 1; i++)
                        {
                            if (i == 1)
                            {
                                <div class="carousel-item active"><img class="d-block mx-auto" src='/images/@ViewData["id"]/Page_@i .png' alt="Page_@i .png"></div>
                            }
                            else
                            {
                                <div class="carousel-item"><img class="d-block mx-auto" src='/images/@ViewData["id"]/Page_@i .png' alt="Page_@i .png"></div>
                            }
                        }

                    </div>
                    <a class="carousel-control-prev invert" href="#pages" data-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                    </a>
                    <a class="carousel-control-next" href="#pages" data-slide="next">
                        <span class="carousel-control-next-icon"></span>
                    </a>
                </div>
            </div>


        </div>
    </div>
</div>
